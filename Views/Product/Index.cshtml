<h1>Product List</h1>
<table>
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Product Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr onclick="location.href='@Url.Action("Details", "Product", new { id = @product.ProductId })'">
                <td>@product.ProductName</td>
                <td>@product.ProductPrice</td>
            </tr>
        }
    </tbody>
</table>
